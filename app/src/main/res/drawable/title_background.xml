<shape xmlns:android="http://schemas.android.com/apk/res/android" >

    <!--
        startColor : 设置渐变颜色的开始值  
        endColor: 设置渐变颜色的结束值  
        #1882D0
        angle : 设置渐变的角度  
            90 ：从下往上开始渐变  
            0 ：从左往右开始渐变  
    -->
    <gradient
        android:angle="0"
        android:endColor="#0F4784"
        android:startColor="#1882D0" />

</shape>