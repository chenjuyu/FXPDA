<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/first_div"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="5dp"
        android:paddingRight="5dp" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:background="@drawable/text_bottom_line"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="售货员"
                android:textSize="17sp" />

            <EditText
                android:id="@+id/salesperson"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="3"
                android:background="@null"
                android:drawableRight="@drawable/input_bg"
                android:editable="false"
                android:hint="请选择售货员"
                android:paddingBottom="0sp"
                android:paddingTop="0sp"
                android:textColor="@color/blue"
                android:textSize="17sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="VIP"
                android:textSize="17sp" />

            <EditText
                android:id="@+id/vip"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="3"
                android:background="@null"
                android:drawableRight="@drawable/input_bg"
                android:editable="false"
                android:hint="请选择VIP"
                android:paddingBottom="0sp"
                android:paddingTop="0sp"
                android:textColor="@color/blue"
                android:textSize="17sp" />
        </LinearLayout>
    </LinearLayout>
    <!-- 大分割 -->

    <LinearLayout
        android:id="@+id/split1"
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:layout_below="@id/first_div"
        android:background="@drawable/split"
        android:orientation="horizontal" >
    </LinearLayout>

    <!-- 扫描区 -->

    <LinearLayout
        android:id="@+id/saomiao_div"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/split1"
        android:orientation="horizontal"
        android:paddingLeft="5dp"
        android:paddingRight="5dp" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/qty_lable"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="数量:"
                    android:textSize="17sp" />

                <EditText
                    android:id="@+id/qty"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="3"
                    android:background="@null"
                    android:digits="0123456789-"
                    android:hint="请输入数量"
                    android:imeOptions="actionDone"
                    android:numeric="integer"
                    android:paddingBottom="0sp"
                    android:paddingTop="0sp"
                    android:singleLine="true"
                    android:textSize="17sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:background="@drawable/text_bottom_line"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/barcode_lable"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="货品:"
                    android:textSize="17sp" />

                <EditText
                    android:id="@+id/barcode"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="3"
                    android:background="@null"
                    android:hint="输入条码/货号"
                    android:imeOptions="actionDone"
                    android:paddingBottom="0sp"
                    android:paddingTop="0sp"
                    android:singleLine="true"
                    android:textSize="17sp" />

                <com.fuxi.widget.FontTextView
                    android:id="@+id/toggle"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:padding="6dp"
                    android:paddingRight="15dp"
                    android:text="@string/toggle"
                    android:textColor="#1B9FD8"
                    android:textSize="30sp" />
            </LinearLayout>
        </LinearLayout>
        <!-- 添加按钮 -->

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/addDetail"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/custom_button"
                android:clickable="true"
                android:gravity="center"
                android:text="添加"
                android:textColor="#fff"
                android:textStyle="bold" />

            <!-- 换成扫描 -->
            <com.fuxi.widget.FontTextView
                android:id="@+id/scanIcon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:gravity="right|center"
                android:padding="0dp"
                android:text="@string/scan"
                android:textColor="#1B9FD8"
                android:textSize="40sp"
                android:textStyle="bold" />






        </LinearLayout>
    </LinearLayout>
    <!-- 大分割 -->

    <LinearLayout
        android:id="@+id/split2"
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:layout_below="@id/saomiao_div"
        android:background="@drawable/split"
        android:orientation="horizontal" >
    </LinearLayout>

    <!-- ListView前面的标题 -->

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/split2"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/ll_title"
                android:layout_width="600dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="5dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="5dp" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:gravity="center_vertical"
                        android:text="货品"
                        android:textColor="@color/black"
                        android:textSize="17sp" />

                    <TextView
                        android:layout_width="0dip"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="颜色"
                        android:textColor="@color/black"
                        android:textSize="17sp" />

                    <TextView
                        android:layout_width="0dip"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="尺码"
                        android:textColor="@color/black"
                        android:textSize="17sp" />

                    <TextView
                        android:layout_width="0dip"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="数量"
                        android:textColor="@color/black"
                        android:textSize="17sp" />

                    <TextView
                        android:layout_width="0dip"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="折扣"
                        android:textColor="@color/black"
                        android:textSize="17sp" />

                    <TextView
                        android:layout_width="0dip"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="单价"
                        android:textColor="@color/black"
                        android:textSize="17sp" />

                    <TextView
                        android:layout_width="0dip"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="金额"
                        android:textColor="@color/black"
                        android:textSize="17sp" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:id="@+id/v_1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#F0F0F0" />
            <!-- ListView -->

            <ListView
                android:id="@+id/sales_detail"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginBottom="120dp"
                android:divider="#F0F0F0"
                android:dividerHeight="1dp"
                android:focusable="false" >
            </ListView>
        </LinearLayout>
    </HorizontalScrollView>

    <!-- 底部 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/top_line"
        android:orientation="vertical" >

        <View
            android:id="@+id/v_2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#F0F0F0" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/top_line"
            android:orientation="vertical"
            android:paddingLeft="5dp"
            android:paddingRight="5dp" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:background="@drawable/text_bottom_line"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="折让"
                    android:textSize="17sp" />

                <EditText
                    android:id="@+id/discount"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="2"
                    android:background="@null"
                    android:drawableRight="@drawable/input_bg"
                    android:editable="false"
                    android:hint="¥ 0.00"
                    android:singleLine="true"
                    android:textSize="17sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="实付"
                    android:textSize="17sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:gravity="center_vertical"
                    android:text="¥"
                    android:textSize="17sp" />

                <EditText
                    android:id="@+id/paid"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="2"
                    android:background="@null"
                    android:editable="false"
                    android:focusable="false"
                    android:paddingBottom="0sp"
                    android:paddingTop="0sp"
                    android:text="0.00"
                    android:textSize="17sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="积分"
                    android:textSize="17sp" />

                <EditText
                    android:id="@+id/integral"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="2"
                    android:background="@null"
                    android:drawableRight="@drawable/input_bg"
                    android:editable="false"
                    android:hint="0"
                    android:singleLine="true"
                    android:textSize="17sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="抵扣"
                    android:textSize="17sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:gravity="center_vertical"
                    android:text="¥"
                    android:textSize="17sp" />

                <EditText
                    android:id="@+id/exchange_amount"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="2"
                    android:background="@null"
                    android:editable="false"
                    android:focusable="false"
                    android:paddingBottom="0sp"
                    android:paddingTop="0sp"
                    android:text="0.00"
                    android:textSize="17sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/top_line"
            android:orientation="horizontal"
            android:paddingLeft="5dp" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="2"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:gravity="center_vertical"
                    android:text="合计 : "
                    android:textSize="17sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/qtysum"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="2dp"
                    android:gravity="center_vertical"
                    android:text="0"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="20dp"
                    android:gravity="center_vertical"
                    android:text="¥"
                    android:textColor="#F19415"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/amount"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="2dp"
                    android:gravity="center_vertical"
                    android:text="0"
                    android:textColor="#F19415"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/submit"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="@drawable/custom_button"
                    android:gravity="center"
                    android:text="提交"
                    android:textColor="#fff"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>